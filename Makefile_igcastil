NAME = fdf
CC = gcc
CCFLAGS = -Wall -Wextra -Werror
SRCS =	main.c freeing_tools.c parse_map_file.c drawing.c handlers.c\
		get_next_line.c get_next_line_utils.c error_msg.c image_placement.c\
		rotations.c
OBJ = $(SRCS:.c=.o)
LIBFT_SRCS =	ft_atoi.c  ft_bzero.c ft_calloc.c ft_isalnum.c ft_isalpha.c ft_isascii.c\
		ft_isdigit.c ft_isprint.c  ft_itoa.c ft_memchr.c ft_memcmp.c ft_memcpy.c\
		ft_memmove.c ft_memset.c ft_putchar_fd.c ft_putendl_fd.c ft_putnbr_fd.c\
		ft_putstr_fd.c ft_split.c ft_strchr.c ft_strdup.c ft_striteri.c ft_strjoin.c\
		ft_strlcat.c ft_strlcpy.c ft_strlen.c ft_strmapi.c ft_strncmp.c ft_strnstr.c\
		ft_strrchr.c ft_strtrim.c ft_substr.c ft_tolower.c ft_toupper.c
LIBFT_OBJ = $(LIBFT_SRCS:.c=.o)
INCLUDE = fdf.h mlx.h get_next_line.h libft/libft.h

all: $(NAME)

$(NAME):	$(OBJ) $(INCLUDE)
	(cd libft; make all; mv libft.a ../ ;cd ..)
	ar -x libft.a
	$(CC) $(CCFLAGS) -g -o $(NAME) $(OBJ) $(LIBFT_OBJ) -Lminilibx-linux -lmlx_Linux -lX11 -lXext -lm

bonus:	$(OBJ)
	(cd libft; make all; mv libft.a ../ ;cd ..)
	ar -x libft.a
	$(AR) $(NAME) $(OBJ) $(LIBFT_OBJ) 

%.o: %.c
	$(CC) $(CCFLAGS) -c -o $@ $<

clean:
	(cd libft; make clean; cd ..)
	rm -f libft.a
	rm -f $(OBJ) $(LIBFT_OBJ)

fclean: clean
	rm -rf $(NAME)

re: fclean all

.PHONY: all bonus clean fclean re